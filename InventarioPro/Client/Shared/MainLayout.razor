@inherits LayoutComponentBase

<MudThemeProvider />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout Class="page">
    <MudAppBar Style="background-color:#002050">
        <!-- Cambia el color aquí -->
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        My Application
    </MudAppBar>
    <MudDrawer @bind-Open="@_drawerOpen" Style="background-color:#002050" Class="sidebar">
        <!-- Cambia el color aquí también si deseas -->
        <NavMenu />
    </MudDrawer>
    <MudMainContent Class="content px-4">
        @Body
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}
